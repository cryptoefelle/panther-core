{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "esnext",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "allowJs": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
    "paths": {
      "*": ["src/*", "types/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable"],
    "noEmit": true,
    "sourceMap": true,
    "noImplicitAny": true
  },
  "exclude": ["node_modules", "build"],
  "include": [
    "src",
    "scripts",
    "tests",
    "__mocks__",
    "webpack.config.ts",
    "../crypto/node_modules/typescript/lib/lib.dom.d.ts"
  ]
}
